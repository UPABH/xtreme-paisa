<style>
  .product-listing-tp {
    padding-left: 150px;
  }

  .product-slider-wrappper {
    overflow-x: hidden;
    position: relative;
    padding-bottom: 72px;
    overflow-y: hidden;
  }

  .product-slider-title h1 {
    text-align: center;
    font-size: 36px;
    font-style: normal;
    font-weight: 500;
    margin: 72px 0px;
  }

  .product-slider-wrappper .swiper-horizontal > .swiper-pagination-bullets,
  .product-slider-wrappper .swiper-pagination-bullets.swiper-pagination-horizontal,
  .product-slider-wrappper .swiper-pagination-custom,
  .product-slider-wrappper .swiper-pagination-fraction {
    bottom: 10;
  }

  .product-slider-wrappper .swiper-button-next {
    right: 42%;
    left: auto;
  }

  .product-slider-wrappper .swiper-button-prev {
    left: 42%;
    right: auto;
  }

  .product-slider-wrappper .swiper-button-next,
  .product-slider-wrappper .swiper-button-prev {
    top: unset;
    bottom: -3px;
  }

  .product-slider-wrappper .swiper-pagination-bullet {
    background: #757575;
    opacity: 1;
  }

  .product-slider-wrappper .swiper-pagination-bullet.swiper-pagination-bullet-active {
    background: transparent;
    border: 2px solid #1eb5da;
  }

  @media (max-width: 990px) {
    .product-listing-tp {
      padding-left: 25px;
    }

    .product-slider-title h1 {
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      line-height: normal;
    }

    .product-slider-wrappper .swiper-button-next {
      display: none;
    }

    .product-slider-wrappper .swiper-button-prev {
      display: none;
    }
  }
</style>
{% assign collection = section.settings.collection %}
<div class="product-slider-wrappper">
  <div class="product-slider-title">
    <h1>{{ section.settings.title }}</h1>
  </div>
  <div class="product-slider">
    <div class="swiper-wrapper">
      {% for product in collection.products limit: 8 %}
        <div class="swiper-slide">
          {% render 'product-card', product: product, collection: collection %}
        </div>
      {% endfor %}
    </div>

    <div class="swiper-pagination"></div>
    <div class="swiper-button-next">
      <svg width="19" height="26" viewBox="0 0 19 26" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M6 7.85696L10.2201 12.3704L6 16.8838L7.38997 18.3704L13 12.3704L7.38997 6.37036L6 7.85696Z" fill="black"/>
      </svg>
    </div>
    <div class="swiper-button-prev">
      <svg width="19" height="26" viewBox="0 0 19 26" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 16.8838L7.77995 12.3704L12 7.85696L10.61 6.37036L5 12.3704L10.61 18.3704L12 16.8838Z" fill="black" fill-opacity="0.5"/>
      </svg>
    </div>
  </div>
</div>

<script>
  var swiper = new Swiper('.product-slider', {
    slidesPerView: 1.2,
    spaceBetween: 10,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      768: {
        slidesPerView: 3.2,
        spaceBetween: 30,
      },
    },
  });
</script>

{% schema %}
{
  "name": "Product Listing Slider",
  "tag": "section",
  "class": "product-listing-tp",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title Here"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],

  "presets": [
    {
      "name": "Product Listing Slider"
    }
  ]
}
{% endschema %}
